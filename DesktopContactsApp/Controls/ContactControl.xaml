<UserControl x:Class="DesktopContactsApp.Controls.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DesktopContactsApp.Controls"
             mc:Ignorable="d"
             d:DesignHeight="90" d:DesignWidth="300">
    <Grid Background="#AAF1FFFF">
        <StackPanel Margin="5">
            <TextBlock Text="Name LastName"
                       x:Name="NameTextBlock"
                       FontSize="20"
                       FontWeight="Bold"/>
            <TextBlock Text="example@domian.com" 
                       x:Name="EmailTextBlock"
                       FontSize="15"
                       Foreground="DodgerBlue"/>
            <TextBlock Text="123.456.7890" 
                       x:Name="PhoneTextBlock"
                       FontSize="15"
                       FontStyle="Italic"/>
        </StackPanel>
    </Grid>
</UserControl>
